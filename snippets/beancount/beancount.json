{
  "Transaction Template": {
    "prefix": "tx",
    "body": [
      "${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE} * \"${1:Description}\"",
      "  Expenses:${2:Type}         ${3:Amount} CNY",
      "  Asserts:${4:Account}        -${3} CNY",
      "",
      "$0"
    ],
    "description": "Standard transaction template"
  },

  "Food Template": {
    "prefix": "food",
    "body": [
      "${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE} * \"Food\"",
      "  Expenses:Food:${1:Type}       ${2:Amount} CNY",
      "  Assets:${3:Wechat}         -${2} CNY",
      "",
      "$0"
    ],
    "description": "Meal expenses template"
  },

  "Canteen Template": {
    "prefix": "canteen",
    "body": [
      "${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE} * \"Food\"",
      "  Expenses:Food:Canteen      ${1:Amount} CNY",
      "  Assets:${2:Wechat}      -${1} CNY",
      "",
      "$0"
    ],
    "description": "Canteen expenses template"
  },

  "Restaurant Template": {
    "prefix": "restaurant",
    "body": [
      "${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE} * \"Food\"",
      "  Expenses:Food:Restaurant       ${1:Amount} CNY",
      "  Assets:${2:Wechat}         -${1} CNY",
      "",
      "$0"
    ],
    "description": "Restaurant expenses template"
  }
}
